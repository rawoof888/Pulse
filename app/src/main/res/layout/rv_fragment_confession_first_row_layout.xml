<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/et_confession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:maxLines="4"
            android:hint="What do you want to confess ?" />
        <Button
            android:id="@+id/btn_confess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confess"
            android:layout_gravity="right"
            android:layout_below="@+id/et_confession"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#00ff15"
            android:background="?attr/selectableItemBackground"/>
        <Button
            android:id="@+id/btn_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discard"
            android:layout_below="@+id/et_confession"
            android:layout_toLeftOf="@+id/btn_confess"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:textColor="#ff0000"
            android:background="?attr/selectableItemBackground" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btn_confess"
            android:background="@color/black"
            />

    </RelativeLayout>

</LinearLayout>